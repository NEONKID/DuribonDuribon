<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Fragments.TimetableFragment">

    <LinearLayout
        android:id="@+id/info_1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강 의 명 : "
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/info_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="강의명이 입력되지 않았습니다!"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캠 퍼 스 : "
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/info_campus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1 "
            android:ems="10"
            android:hint="캠퍼스가 입력되지 않았습니다!"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_3"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강 의 실 : "
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/info_classroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="강의실이 입력되지 않았습니다!"
            android:textSize="15sp"/>

    </LinearLayout>

